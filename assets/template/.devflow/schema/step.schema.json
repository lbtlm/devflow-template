{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lbtlm.dev/devflow/step.schema.json",
  "title": "DevFlow Step",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "createdAt",
    "status",
    "summary"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^step-[0-9]{2}$"
    },
    "type": {
      "type": "string",
      "enum": [
        "requirements",
        "api-contract",
        "plan",
        "todos",
        "impl",
        "build-check",
        "summary"
      ]
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "in-review",
        "approved",
        "blocked",
        "rejected"
      ]
    },
    "goal": {
      "type": "string"
    },
    "summary": {
      "type": "string"
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "description"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "links": {
            "type": "array",
            "items": {
              "type": "string",
              "format": "uri"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "todos": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "status"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pending",
              "in-progress",
              "done",
              "blocked"
            ]
          },
          "owner": {
            "type": "string"
          },
          "dependsOn": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "title",
          "impact",
          "mitigation"
        ],
        "properties": {
          "title": {
            "type": "string"
          },
          "impact": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "probability": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "mitigation": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "embedding": {
      "type": "string"
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "description"
        ],
        "properties": {
          "path": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "notes": {
      "type": "string"
    }
  }
}
